<article class="archive-article archive-type-<%= post.layout %>">
  <div class="archive-article-inner">
    <header class="archive-article-header">
      <div class="archive-article-date">
		  <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, 'YYYY年MMMDD日') %></time>
	  </div>
      <%- partial('_post/title', {class_name: 'archive-article-title'}) %>
    </header>
  </div>
</article>